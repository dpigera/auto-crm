<div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity {{if @isOpen 'block' 'hidden'}}">
  <div class="fixed inset-0 z-10 overflow-y-auto">
    <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
      <div class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg">
        {{!-- Modal header --}}
        <div class="bg-white px-4 pb-4 pt-5 sm:p-6">
          <div class="flex items-start justify-between">
            <h3 class="text-xl font-semibold leading-6 text-gray-900">Add Article</h3>
            <button 
              type="button" 
              class="rounded-md bg-white text-gray-400 hover:text-gray-500"
              {{on "click" @onClose}}
            >
              <span class="sr-only">Close</span>
              <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>
          
          {{!-- Modal body --}}
          <div class="mt-4 space-y-4">
            <div>
              <label for="title" class="block text-sm font-medium text-gray-700">Title</label>
              <input 
                type="text" 
                id="title"
                class="mt-1 text-sm block w-full rounded-md border-gray-300 focus:border-blue-500 focus:ring-blue-500"
                {{on "input" this.onTitleChange}}
              >
            </div>

            <div>
              <label for="caption" class="block text-sm font-medium text-gray-700">Caption</label>
              <input 
                type="text" 
                id="caption"
                class="mt-1 text-sm block w-full rounded-md border-gray-300 focus:border-blue-500 focus:ring-blue-500"
                {{on "input" this.onCaptionChange}}
              >
            </div>

            <div>
              <label for="author" class="block text-sm font-medium text-gray-700">Author</label>
              <select 
                id="author"
                class="mt-1 text-sm block w-full rounded-md border-gray-300 focus:border-blue-500 focus:ring-blue-500"
                {{on "change" this.onAuthorChange}}
              >
                <option class="text-sm" value="">Select an author</option>
                {{#each @users as |user|}}
                  <option value={{user.id}}>{{user.name}}</option>
                {{/each}}
              </select>
            </div>

            <div>
              <label for="markdown" class="block text-sm font-medium text-gray-700">Markdown</label>
              <textarea 
                id="markdown"
                rows="8"
                class="mt-1 text-sm block w-full rounded-md border-gray-300 focus:border-blue-500 focus:ring-blue-500"
                {{on "input" this.onMarkdownChange}}
              ></textarea>
            </div>
          </div>
        </div>

        {{!-- Modal footer --}}
        <div class="bg-gray-50 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6">
          <button 
            type="button" 
            class="inline-flex w-full justify-center rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 sm:ml-3 sm:w-auto"
            {{on "click" this.onSave}}
          >
            Save
          </button>
          <button 
            type="button" 
            class="mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:mt-0 sm:w-auto"
            {{on "click" @onClose}}
          >
            Cancel
          </button>
        </div>
      </div>
    </div>
  </div>
</div> 