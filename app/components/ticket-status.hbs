<div class="text-center items-center text-white px-3 py-1 rounded-md text-sm font-bold 
    {{if (eq @status 'open') 'bg-red-700'}}
    {{if (eq @status 'in_progress') 'bg-orange-700'}}
    {{if (eq @status 'pending') 'bg-yellow-700'}}
    {{if (eq @status 'solved') 'bg-green-700'}}">
    {{#if (eq @status 'in_progress')}}
        In Progress
    {{else}}
        {{capitalize @status}}
    {{/if}}
</div>