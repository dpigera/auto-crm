<div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity {{if @isOpen 'block' 'hidden'}}">
  <div class="fixed inset-0 z-10 overflow-y-auto">
    <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
      <div class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg">
        {{!-- Modal header --}}
        <div class="bg-white px-4 pb-4 pt-5 sm:p-6">
          <div class="flex items-start justify-between">
            <h3 class="text-xl font-semibold leading-6 text-gray-900">Add Ticket</h3>
            <button 
              type="button" 
              class="rounded-md bg-white text-gray-400 hover:text-gray-500"
              {{on "click" @onClose}}
            >
              <span class="sr-only">Close</span>
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>
          
          {{!-- Modal body --}}
          <div class="mt-4 space-y-4">
            <div>
              <label for="assignee" class="block text-sm font-medium text-gray-700">Assignee</label>
              <select 
                id="assignee" 
                class="mt-1 block w-full rounded-md border-gray-300 focus:border-blue-500 focus:ring-blue-500"
                {{on "change" this.onAssigneeChange}}
              >
                <option value="" class="text-sm">Select an assignee</option>
                {{#each @users as |user|}}
                  <option value={{user.id}}>{{user.name}}</option>
                {{/each}}
              </select>
            </div>

            <div>
              <label for="subject" class="block text-sm font-medium text-gray-700">Subject</label>
              <input 
                type="text" 
                id="subject"
                class="mt-1 block w-full rounded-md border-gray-300 focus:border-blue-500 focus:ring-blue-500"
                {{on "input" this.onSubjectChange}}
              >
            </div>

            <div>
              <label for="description" class="block text-sm font-medium text-gray-700">Description</label>
              <textarea 
                id="description" 
                rows="4"
                class="mt-1 block w-full rounded-md border-gray-300 focus:border-blue-500 focus:ring-blue-500"
                {{on "input" this.onDescriptionChange}}
              ></textarea>
            </div>
          </div>
        </div>

        {{!-- Modal footer --}}
        <div class="bg-gray-50 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6">
          <button 
            type="button" 
            class="inline-flex w-full justify-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 sm:ml-3 sm:w-auto"
            {{on "click" this.onSave}}
          >
            Save
          </button>
          <button 
            type="button" 
            class="mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:mt-0 sm:w-auto"
            {{on "click" @onClose}}
          >
            Cancel
          </button>
        </div>
      </div>
    </div>
  </div>
</div> 