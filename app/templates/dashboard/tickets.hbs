{{outlet}}
{{#if (eq this.router.currentRouteName 'dashboard.tickets.index')}}

{{!-- Messages Column --}}
<div class="flex-1 bg-white flex flex-col">
  <div class="flex-1 overflow-y-auto messages-container">
    {{!-- Header Section --}}
    <div class="p-4">
      <div class="flex justify-between items-center mb-4">
        <h1 class="text-xl font-bold">Tickets</h1>
        <button 
          type="button" 
          class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md"
          {{on "click" (fn (mut this.isModalOpen) true)}}
        >
          Add Ticket
        </button>
      </div>

      <AddTicketModal 
        @isOpen={{this.isModalOpen}}
        @users={{this.users}}
        @onClose={{fn (mut this.isModalOpen) false}}
        @onSave={{this.saveTicket}}
      />

      <div class="text-sm text-gray-500 mt-1">{{this.tickets.length}} tickets</div>
    </div>

    <TicketsTable 
      @tickets={{this.tickets}} 
      @onTicketClick={{this.viewTicket}} 
    />
  </div>
</div> 
{{/if}}