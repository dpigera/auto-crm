{{!-- Ticket Meta Info Column --}}
<div class="{{if this.isMobileMenuOpen 'fixed inset-0 z-40 lg:relative' 'hidden lg:block'}} w-60 border-r border-gray-300 bg-white text-white overflow-y-auto">
  {{!-- Views Section Content --}}
  <div class="p-4 pt-6 pl-6">
    <div class="mb-6 text-sm">
      <h2 class="text-black text-xl font-semibold mb-2">Views</h2>
      <div class="border-b border-gray-300 mb-3"></div>
      
      <div class="space-y-2">
        <button class="w-full flex items-center justify-between py-2 px-4 text-gray-700 hover:bg-gray-200 bg-gray-200 rounded-md transition-colors">
          <span>Unresolved tickets</span>
          <span class="text-gray-500">2</span>
        </button>
        
        <button class="w-full flex items-center justify-between py-2 px-4 text-gray-700 hover:bg-gray-200 rounded-md transition-colors">
          <span>Unassigned tickets</span>
          <span class="text-gray-500">0</span>
        </button>
        
        <button class="w-full flex items-center justify-between py-2 px-4 text-gray-700 hover:bg-gray-200 rounded-md transition-colors">
          <span>Recently updated tickets</span>
          <span class="text-gray-500">0</span>
        </button>
      </div>
    </div>
  </div>
</div>

{{!-- Messages Column --}}
<div class="flex-1 bg-white flex flex-col">
  <div class="flex-1 overflow-y-auto p-6 messages-container">
    {{!-- Header Section --}}
    <div class="mb-6">
      <h1 class="text-xl font-semibold text-gray-900">Unresolved tickets</h1>
      <p class="text-sm text-gray-500 mt-1">{{this.tickets.length}} tickets</p>
    </div>

    {{!-- Table Header --}}
    <div class="min-w-full">
      <div class="border-b border-gray-200">
        <div class="grid grid-cols-[minmax(120px,auto)_1fr_120px_100px_100px] gap-4 pb-3 text-xs font-medium text-gray-500 uppercase tracking-wider">
          <div>Ticket status</div>
          <div>Subject</div>
          <div>Requested</div>
          <div>Updated</div>
          <div>Priority</div>
        </div>
      </div>

      {{#each this.tickets as |ticket|}}
        <div class="hover:bg-gray-50 cursor-pointer">
          <div class="grid grid-cols-[minmax(120px,auto)_1fr_120px_100px_100px] gap-4 py-2.5 text-sm border-b border-gray-100 items-center">
            <div>
              <span class="inline-flex items-center px-3 py-0.5 rounded-md text-sm font-medium 
                {{if (eq ticket.status 'open') 'bg-red-100 text-red-800'}}
                {{if (eq ticket.status 'in_progress') 'bg-orange-100 text-orange-800'}}
                {{if (eq ticket.status 'pending') 'bg-yellow-100 text-yellow-800'}}
                {{if (eq ticket.status 'solved') 'bg-green-100 text-green-800'}}">
                {{#if (eq ticket.status 'in_progress')}}
                  In Progress
                {{else}}
                  {{capitalize ticket.status}}
                {{/if}}
              </span>
            </div>
            <div class="text-gray-900">{{ticket.subject}}</div>
            <div class="text-gray-500">{{ticket.expand.requester.name}}</div>
            <div class="text-gray-500">{{relative-time ticket.updated}}</div>
            <div>
              <span class="inline-flex items-center px-3 py-0.5 rounded-md text-sm font-medium
                {{if (eq ticket.priority 'urgent') 'bg-red-100 text-red-800'}}
                {{if (eq ticket.priority 'high') 'bg-orange-100 text-orange-800'}}
                {{if (eq ticket.priority 'normal') 'bg-yellow-100 text-yellow-800'}}
                {{if (eq ticket.priority 'low') 'bg-green-100 text-green-800'}}">
                {{capitalize ticket.priority}}
              </span>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div> 