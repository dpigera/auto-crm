{{!-- Messages Column --}}
<div class="flex-1 bg-white flex flex-col">
  <div class="flex-1 overflow-y-auto p-4 messages-container">
    {{!-- Header Section --}}
    <div class="mb-6">
      <h1 class="text-xl font-semibold text-gray-900">Tickets</h1>
      <p class="text-sm text-gray-500 mt-1">{{this.tickets.length}} tickets</p>
    </div>

    {{!-- Table Header --}}
    <div class="min-w-full">
      <div class="border-b border-gray-200">
        <div class="grid grid-cols-[minmax(120px,auto)_1fr_120px_100px_100px] gap-4 pb-3 text-xs font-medium text-gray-500 uppercase tracking-wider">
          <div>Ticket status</div>
          <div>Subject</div>
          <div>Requested</div>
          <div>Updated</div>
          <div>Priority</div>
        </div>
      </div>

      {{#each this.tickets as |ticket|}}
        <div class="hover:bg-gray-200 cursor-pointer" {{on "click" (fn this.viewTicket ticket.id)}}>
          <div class="grid grid-cols-[minmax(120px,auto)_1fr_120px_100px_100px] gap-4 py-2.5 text-sm border-b border-gray-100 items-center">
            <div>
              <div class="text-center items-center text-white px-3 py-1 rounded-md text-sm font-bold 
                {{if (eq ticket.status 'open') 'bg-red-700'}}
                {{if (eq ticket.status 'in_progress') 'bg-orange-700'}}
                {{if (eq ticket.status 'pending') 'bg-yellow-700'}}
                {{if (eq ticket.status 'solved') 'bg-green-700'}}">
                {{#if (eq ticket.status 'in_progress')}}
                  In Progress
                {{else}}
                  {{capitalize ticket.status}}
                {{/if}}
              </div>
            </div>
            <div class="text-gray-900">{{ticket.subject}}</div>
            <div class="text-gray-500">{{ticket.expand.requester.name}}</div>
            <div class="text-gray-500">{{relative-time ticket.updated}}</div>
            <div>
              <div class="inline-flex items-center py-0.5 rounded-md text-sm font-medium
                {{if (eq ticket.priority 'urgent') ''}}
                {{if (eq ticket.priority 'high') ''}}
                {{if (eq ticket.priority 'normal') ''}}
                {{if (eq ticket.priority 'low') ''}}">
                {{capitalize ticket.priority}}
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div> 
{{/if}}