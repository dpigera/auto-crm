{{!-- Ticket Meta Info Column --}}
<div class="{{if this.isMobileMenuOpen 'fixed inset-0 z-40 lg:relative' 'hidden lg:block'}} w-60 border-r border-gray-300 bg-white text-white overflow-y-auto">
  {{!-- Views Section Content --}}
  <div class="p-4 pt-6 pl-6">
    <div class="mb-6 text-sm">
      <h2 class="text-black text-xl font-semibold mb-2">Views</h2>
      <div class="border-b border-gray-300 mb-3"></div>
      
      <div class="space-y-2">
        <button class="w-full flex items-center justify-between py-2 px-4 text-gray-700 hover:bg-gray-200 bg-gray-200 rounded-md transition-colors">
          <span>Unresolved tickets</span>
          <span class="text-gray-500">2</span>
        </button>
        
        <button class="w-full flex items-center justify-between py-2 px-4 text-gray-700 hover:bg-gray-200 rounded-md transition-colors">
          <span>Unassigned tickets</span>
          <span class="text-gray-500">0</span>
        </button>
        
        <button class="w-full flex items-center justify-between py-2 px-4 text-gray-700 hover:bg-gray-200 rounded-md transition-colors">
          <span>Recently updated tickets</span>
          <span class="text-gray-500">0</span>
        </button>
      </div>
    </div>
  </div>
</div>

{{!-- Messages Column --}}
<div class="flex-1 bg-white flex flex-col">
  <div class="flex-1 overflow-y-auto p-6 messages-container">
    {{!-- Header Section --}}
    <div class="mb-6">
      <h1 class="text-xl font-semibold text-gray-900">Unresolved tickets</h1>
      <p class="text-sm text-gray-500 mt-1">3 tickets</p>
    </div>

    {{!-- Table Header --}}
    <div class="min-w-full">
      <div class="border-b border-gray-200">
        <div class="grid grid-cols-[minmax(120px,auto)_1fr_120px_100px_100px] gap-4 pb-3 text-xs font-medium text-gray-500 uppercase tracking-wider">
          <div>Ticket status</div>
          <div>Subject</div>
          <div>Requested</div>
          <div>Updated</div>
          <div>Priority</div>
        </div>
      </div>

      {{!-- Sample Table Row --}}
      <div class="hover:bg-gray-50 cursor-pointer">
        <div class="grid grid-cols-[minmax(120px,auto)_1fr_120px_100px_100px] gap-4 py-2.5 text-sm border-b border-gray-100 items-center">
          <div>
            <span class="inline-flex items-center px-3 py-0.5 rounded-md text-sm font-medium bg-yellow-100 text-yellow-800">
              In Progress
            </span>
          </div>
          <div class="text-gray-900">Unable to access dashboard after login</div>
          <div class="text-gray-500">Tom Cook</div>
          <div class="text-gray-500">24m ago</div>
          <div>
            <span class="inline-flex items-center px-3 py-0.5 rounded-md text-sm font-medium bg-red-100 text-red-800">
              High
            </span>
          </div>
        </div>
      </div>

      {{!-- Second Sample Row --}}
      <div class="hover:bg-gray-50 cursor-pointer">
        <div class="grid grid-cols-[minmax(120px,auto)_1fr_120px_100px_100px] gap-4 py-2.5 text-sm border-b border-gray-100 items-center">
          <div>
            <span class="inline-flex items-center px-3 py-0.5 rounded-md text-sm font-medium bg-green-100 text-green-800">
              New
            </span>
          </div>
          <div class="text-gray-900">Payment method declined</div>
          <div class="text-gray-500">Sarah Wilson</div>
          <div class="text-gray-500">2h ago</div>
          <div>
            <span class="inline-flex items-center px-3 py-0.5 rounded-md text-sm font-medium bg-yellow-100 text-yellow-800">
              Medium
            </span>
          </div>
        </div>
      </div>

      {{!-- Third Sample Row --}}
      <div class="hover:bg-gray-50 cursor-pointer">
        <div class="grid grid-cols-[minmax(120px,auto)_1fr_120px_100px_100px] gap-4 py-2.5 text-sm border-b border-gray-100 items-center">
          <div>
            <span class="inline-flex items-center px-3 py-0.5 rounded-md text-sm font-medium bg-blue-100 text-blue-800">
              On Hold
            </span>
          </div>
          <div class="text-gray-900">Export functionality not working</div>
          <div class="text-gray-500">Alex Chen</div>
          <div class="text-gray-500">1d ago</div>
          <div>
            <span class="inline-flex items-center px-3 py-0.5 rounded-md text-sm font-medium bg-gray-100 text-gray-800">
              Low
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 