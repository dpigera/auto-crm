<div class="flex-1 flex">
  {{!-- Ticket Metadata Column --}}
  <div class="w-60 border-r border-gray-300 bg-white overflow-y-auto">
    <div class="p-4">
      <div class="flex items-center mb-4">
        <button 
          type="button" 
          class="mr-3 text-gray-500 hover:text-gray-700"
          {{on "click" this.goBack}}
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
          </svg>
        </button>
        <h2 class="text-black text-xl font-semibold">Ticket info</h2>
      </div>
      
      <div class="space-y-4">
        <div>
          <div class="text-sm font-medium text-gray-500 mb-1">Status</div>
          <span class="inline-flex items-center px-3 py-0.5 rounded-md text-sm font-medium 
            {{if (eq this.ticket.status 'open') 'bg-red-100 text-red-800'}}
            {{if (eq this.ticket.status 'in_progress') 'bg-orange-100 text-orange-800'}}
            {{if (eq this.ticket.status 'pending') 'bg-yellow-100 text-yellow-800'}}
            {{if (eq this.ticket.status 'solved') 'bg-green-100 text-green-800'}}">
            {{#if (eq this.ticket.status 'in_progress')}}
              In Progress
            {{else}}
              {{capitalize this.ticket.status}}
            {{/if}}
          </span>
        </div>

        <div>
          <div class="text-sm font-medium text-gray-500 mb-1">Priority</div>
          <span class="inline-flex items-center px-3 py-0.5 rounded-md text-sm font-medium
            {{if (eq this.ticket.priority 'urgent') 'bg-red-100 text-red-800'}}
            {{if (eq this.ticket.priority 'high') 'bg-orange-100 text-orange-800'}}
            {{if (eq this.ticket.priority 'normal') 'bg-yellow-100 text-yellow-800'}}
            {{if (eq this.ticket.priority 'low') 'bg-green-100 text-green-800'}}">
            {{capitalize this.ticket.priority}}
          </span>
        </div>

        <div>
          <div class="text-sm font-medium text-gray-500 mb-1">Created</div>
          <div class="text-sm text-gray-900">{{relative-time this.ticket.created}}</div>
        </div>

        <div>
          <div class="text-sm font-medium text-gray-500 mb-1">Last Updated</div>
          <div class="text-sm text-gray-900">{{relative-time this.ticket.updated}}</div>
        </div>
      </div>
    </div>
  </div>

  {{!-- Messages Column --}}
  <div class="flex-1 bg-white flex flex-col border-r border-gray-300">
    <div class="p-4 border-b border-gray-300">
      <h1 class="text-lg font-semibold text-gray-900">{{this.ticket.subject}}</h1>
    </div>
    
    <div class="flex-1 overflow-y-auto p-4">
      {{!-- Messages will go here --}}
      <div class="text-sm text-gray-500 italic">No messages yet</div>
    </div>
  </div>

  {{!-- Requester Info Column --}}
  <div class="w-80 bg-white overflow-y-auto">
    <div class="p-4">
      <h2 class="text-black text-xl font-semibold mb-4">Requester Info</h2>
      
      <div class="space-y-4">
        <div>
          <div class="text-sm font-medium text-gray-500 mb-1">Name</div>
          <div class="text-sm text-gray-900">{{this.ticket.expand.requester.name}}</div>
        </div>

        <div>
          <div class="text-sm font-medium text-gray-500 mb-1">Email</div>
          <div class="text-sm text-gray-900">{{this.ticket.expand.requester.email}}</div>
        </div>
      </div>
    </div>
  </div>
</div> 