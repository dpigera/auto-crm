<div class="min-h-screen bg-indigo-50 flex items-center justify-center">
  <div class="w-full max-w-md p-8 bg-white rounded-lg shadow-lg">
    <h1 class="text-2xl font-bold text-center text-indigo-900 mb-8">
      gauntletai.zendesk.com
    </h1>
    
    {{#if this.errorMessage}}
      <div class="mb-4 p-3 bg-red-100 border border-red-400 text-red-700 rounded text-sm">
        {{this.errorMessage}}
      </div>
    {{/if}}

    <form class="space-y-6" {{on "submit" this.signIn}}>
      <div>
        <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
          Email Address
        </label>
        <input 
          type="email" 
          id="email"
          name="email"
          class="text-sm w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
          placeholder="you@example.com"
          value="dpigera+user1@gmail.com"
          required
        >
      </div>

      <div>
        <label for="password" class="block text-sm font-medium text-gray-700 mb-1">
          Password
        </label>
        <input 
          type="password" 
          id="password"
          name="password"
          class="text-sm w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
          placeholder="Enter your password"
          value="123password"
          required
        >
      </div>

      <button 
        type="submit" 
        class="text-sm w-full py-2 px-4 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 disabled:opacity-50"
        disabled={{this.isLoading}}
      >
        {{if this.isLoading "Signing in..." "Sign In"}}
      </button>

      <div class="mt-6">
        <LinkTo 
          @route="signup" 
          class="text-sm w-full flex justify-center py-2 px-4 text-sm font-medium text-indigo-600 hover:text-indigo-500"
        >
          New User? Sign up for account
        </LinkTo>
      </div>
    </form>
  </div>
</div> 